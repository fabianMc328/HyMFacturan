@page "/consultas"
@rendermode InteractiveServer
@using HyMFacturan.Components.Data
@using HyMFacturan.Components.Servicios
@inject ServicioControlador servicio
@inject NavigationManager NavManager

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Dashboard Ejecutivo</h2>
            <p class="text-muted">Métricas clave del rendimiento de tu negocio</p>
        </div>
        <button class="btn btn-outline-secondary" @onclick="Regresar">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </button>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Analizando datos...</p>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card" style="background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); color: white;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase opacity-75 mb-1">Ingresos Totales</h6>
                                <h2 class="display-6 fw-bold mb-0">$@datos.DineroTotal.ToString("N0")</h2>
                            </div>
                            <i class="bi bi-wallet2 fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card bg-white">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Cliente VIP</h6>
                                <h3 class="fw-bold text-dark mb-0">@datos.ClienteTop</h3>
                                <small class="text-success"><i class="bi bi-star-fill me-1"></i>El que más invierte</small>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                <i class="bi bi-trophy-fill fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card bg-white">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Mes Récord</h6>
                                <h3 class="fw-bold text-dark mb-0">@datos.MesTop</h3>
                                <small class="text-primary"><i class="bi bi-graph-up-arrow me-1"></i>Pico de ventas</small>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="bi bi-calendar-check fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3 border-0">
                        <h5 class="mb-0 fw-bold"><i class="bi bi-box-seam me-2 text-primary"></i>Producto Estrella</h5>
                    </div>
                    <div class="card-body text-center py-5">
                        <div class="display-1 text-primary mb-3">
                            <i class="bi bi-award"></i>
                        </div>
                        <h3 class="fw-bold">@datos.ProductoTop</h3>
                        <p class="text-muted fs-5">Vendido <span class="badge bg-primary rounded-pill">@datos.CantidadProducto veces</span></p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Atención Requerida</h5>
                        <span class="badge bg-danger bg-opacity-10 text-danger">Bajas Ventas</span>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">Los siguientes meses reportaron el menor ingreso histórico:</p>
                        <ul class="list-group list-group-flush">
                            @foreach (var mes in datos.MesesMalos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span><i class="bi bi-arrow-down-right text-danger me-2"></i>@mes.Split('(')[0]</span>
                                    <span class="fw-bold text-dark">@mes.Split('(')[1].Replace(")", "")</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <button class="btn btn-primary rounded-pill px-4 py-2" @onclick="Actualizar">
                <i class="bi bi-arrow-clockwise me-2"></i>Actualizar Métricas
            </button>
        </div>
    }
</div>

@code {
    private DatosDashboard datos = new();
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await Actualizar();
    }

    private async Task Actualizar()
    {
        cargando = true;
        datos = await servicio.CargarDatosDashboard();
        cargando = false;
    }

    private void Regresar() => NavManager.NavigateTo("/vista");
}