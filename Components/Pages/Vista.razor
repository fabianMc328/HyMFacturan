@page "/vista"
@rendermode InteractiveServer

@using HyMFacturan.Components.Data
@using HyMFacturan.Components.Servicios

@inject ServicioControlador servicio
@inject NavigationManager NavManager

<div style="margin-bottom: 15px;">
    <h3>Gestión de Facturas</h3>
    <button @onclick="IrAConsultas">📊 Ver Consultas</button>
    <button @onclick="IrAReporte">📅 Reporte SAT</button>
</div>

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div style="color: red;">@mensajeError</div>
}
@if (!string.IsNullOrEmpty(mensajeOk))
{
    <div style="color: green;">@mensajeOk</div>
}

<div style="border: 1px solid gray; padding: 10px; margin-bottom: 20px;">
    <h4>Nueva Factura</h4>
    <div>
        <label>Fecha:</label>
        <input type="date" @bind="nuevaFactura.Fecha" />
    </div>
    <div>
        <label>Nombre Cliente:</label>
        <input @bind="nuevaFactura.Nombre" placeholder="Nombre" />
    </div>

    <hr />

    <h5>Añadir Artículos</h5>
    <div>
        <input @bind="nuevoArticulo.Nombre" placeholder="Nombre del Artículo" />
        <input type="number" @bind="nuevoArticulo.Precio" placeholder="Precio" />
        <button type="button" @onclick="AñadirArticuloTemporal">Añadir</button>
    </div>

    @if (articulosTemporales.Any())
    {
        <table border="1" width="50%" style="margin-top: 10px;">
            <thead><tr><th>Artículo</th><th>Precio</th></tr></thead>
            <tbody>
                @foreach (var art in articulosTemporales)
                {
                    <tr><td>@art.Nombre</td><td>@art.Precio</td></tr>
                }
            </tbody>
        </table>
        <h3>Total: @totalTemporal</h3>
    }

    <div style="margin-top: 10px;">
        <button type="button" @onclick="GuardarFacturaCompleta">Guardar Factura Completa</button>
    </div>
</div>

<hr />

<h4>Lista de Facturas Guardadas</h4>
@if (facturasGuardadas == null)
{
    <p>Cargando...</p>
}
else if (!facturasGuardadas.Any())
{
    <p>No hay facturas.</p>
}
else
{
    <table border="1" width="100%">
        <thead>
            <tr><th>ID</th><th>Fecha</th><th>Nombre</th><th>Total</th><th>Acciones</th></tr>
        </thead>
        <tbody>
            @foreach (var f in facturasGuardadas)
            {
                <tr>
                    <td>@f.Id</td>
                    <td>@f.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@f.Nombre</td>
                    <td><b>@f.Total</b></td>
                    <td>
                        @if (!articulosPorFactura.ContainsKey(f.Id))
                        {
                            <button @onclick="() => CargarArticulos(f.Id)">Ver detalles</button>
                        }
                        else
                        {
                            <button @onclick="() => OcultarArticulos(f.Id)">Ocultar</button>
                        }
                    </td>
                </tr>
                @if (articulosPorFactura.ContainsKey(f.Id))
                {
                    <tr>
                        <td colspan="5">
                            <div style="padding: 10px; background-color: #f0f0f0;">
                                <h5>Artículos de factura #@f.Id</h5>
                                <table border="1" width="100%">
                                    <thead><tr><th>Producto</th><th>Precio</th><th>Opciones</th></tr></thead>
                                    <tbody>
                                        @foreach (var art in articulosPorFactura[f.Id])
                                        {
                                            <tr>
                                                @if (articuloEditando?.Id == art.Id)
                                                {
                                                    <td><input @bind="articuloEditando.Nombre" /></td>
                                                    <td><input type="number" @bind="articuloEditando.Precio" /></td>
                                                    <td>
                                                        <button @onclick="() => GuardarEdicionArticulo(f)">Guardar</button>
                                                        <button @onclick="CancelarEdicion">Cancelar</button>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>@art.Nombre</td>
                                                    <td>@art.Precio</td>
                                                    <td>
                                                        <button @onclick="() => EditarArticulo(art)">Editar</button>
                                                        <button @onclick="() => EliminarArticulo(f, art.Id)">Borrar</button>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

<div style="margin-top: 20px;">
    <button @onclick="Cargar">Recargar Lista</button>
    <button @onclick="Borrar">Borrar Todo</button>
</div>

@code {
    private List<Factura>? facturasGuardadas;
    private string mensajeError = string.Empty;
    private string mensajeOk = string.Empty;

    private Factura nuevaFactura = new() { Fecha = DateTime.Now };
    private Articulo nuevoArticulo = new();
    private List<Articulo> articulosTemporales = new();
    private int totalTemporal = 0;

    private Dictionary<int, List<Articulo>> articulosPorFactura = new();
    private Articulo? articuloEditando;

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

    // Navegación
    private void IrAConsultas() => NavManager.NavigateTo("/consultas");
    private void IrAReporte() => NavManager.NavigateTo("/reporte");

    // Lógica de Facturas
    private void AñadirArticuloTemporal()
    {
        if (nuevoArticulo.Precio > 0 && !string.IsNullOrWhiteSpace(nuevoArticulo.Nombre))
        {
            articulosTemporales.Add(new Articulo { Nombre = nuevoArticulo.Nombre, Precio = nuevoArticulo.Precio });
            totalTemporal = articulosTemporales.Sum(a => a.Precio);
            nuevoArticulo = new();
        }
    }

    private async Task GuardarFacturaCompleta()
    {
        mensajeError = ""; mensajeOk = "";
        if (articulosTemporales.Count == 0) { mensajeError = "Sin artículos."; return; }
        if (string.IsNullOrWhiteSpace(nuevaFactura.Nombre)) { mensajeError = "Falta nombre."; return; }

        nuevaFactura.Total = totalTemporal;
        await servicio.GuardarFacturaCompleta(nuevaFactura, articulosTemporales);

        nuevaFactura = new() { Fecha = DateTime.Now };
        articulosTemporales.Clear();
        totalTemporal = 0;
        mensajeOk = "Guardado.";
        await Cargar();
    }

    private async Task Cargar()
    {
        facturasGuardadas = await servicio.ObtenerFacturas();
        articulosPorFactura.Clear();
        articuloEditando = null;
    }

    private async Task Borrar()
    {
        await servicio.BorrarTodas();
        await Cargar();
    }

 
    private async Task CargarArticulos(int fid)
    {
        articulosPorFactura[fid] = await servicio.ObtenerArticulosPorFactura(fid);
    }

    private void OcultarArticulos(int fid)
    {
        articulosPorFactura.Remove(fid);
    }

    private void EditarArticulo(Articulo art)
    {
        articuloEditando = new Articulo { Id = art.Id, Nombre = art.Nombre, Precio = art.Precio, FacturaId = art.FacturaId };
    }

    private void CancelarEdicion() => articuloEditando = null;

    private async Task GuardarEdicionArticulo(Factura f)
    {
        if (articuloEditando == null) return;
        await servicio.ActualizarArticulo(articuloEditando);
        await CargarArticulos(f.Id);

        int nuevoTotal = articulosPorFactura[f.Id].Sum(a => a.Precio);
        await servicio.ActualizarTotalFactura(f.Id, nuevoTotal);
        f.Total = nuevoTotal;
        articuloEditando = null;
    }

    private async Task EliminarArticulo(Factura f, int aid)
    {
        await servicio.EliminarArticulo(aid);
        await CargarArticulos(f.Id);
        int nuevoTotal = articulosPorFactura[f.Id].Sum(a => a.Precio);
        await servicio.ActualizarTotalFactura(f.Id, nuevoTotal);
        f.Total = nuevoTotal;
    }
}